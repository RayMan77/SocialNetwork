@model PL.Models.CommentEditModel

@{
    ViewBag.Title = "DeleteComment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DeleteComment</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>CommentEditModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Comment.CommentMessage)
        </dt>

	    <dd>
		    @Html.DisplayFor(model => model.Comment.CommentMessage)
	    </dd>
		<dt>
			@Html.DisplayNameFor(model => model.Comment.Time)
		</dt>

	    <dd>
		    @Html.DisplayFor(model => model.Comment.Time)
	    </dd>
		<dt>
			@Html.DisplayNameFor(model => model.Comment.Post)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Comment.Post)
		</dd>


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
		@Html.HiddenFor(m=>m.Comment.ID)
		@Html.HiddenFor(m=>m.PostId)
		@Html.HiddenFor(m=>m.BackView)
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            @Html.ActionLink("Back", "Reactions","Post",new {id=Model.PostId,viewName=Model.BackView},new {@class="btn btn-default"})
        </div>
    }
</div>
